<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <name>Flowable - Upgrade</name>
    <groupId>org.flowable</groupId>
    <artifactId>flowable-upgrade-qa</artifactId>
    <version>1.0</version>
    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <junit.version>4.13.2</junit.version>
        <assertj.version>3.11.1</assertj.version>
        <liquibase.version>4.8.0</liquibase.version>
        <oracle.jdbc.version>12.2.0.1</oracle.jdbc.version>
        <oracle.jdbc.artifact>ojdbc8</oracle.jdbc.artifact>
        <jdbc.url>TODO</jdbc.url>
        <jdbc.driver>TODO</jdbc.driver>
        <jdbc.username>TODO</jdbc.username>
        <jdbc.password>TODO</jdbc.password>
        <jdbc.schema>TODO</jdbc.schema>
    </properties>

    <modules>
        <module>flowable-upgrade-common</module>
        <module>flowable-upgrade-drop</module>
        <module>flowable-upgrade-5.14</module>
        <module>flowable-upgrade-5.15</module>
        <module>flowable-upgrade-5.15.1</module>
        <module>flowable-upgrade-5.16</module>
        <module>flowable-upgrade-5.16.1</module>
        <module>flowable-upgrade-5.16.2</module>
        <module>flowable-upgrade-5.16.3</module>
        <module>flowable-upgrade-5.17.0</module>
        <module>flowable-upgrade-5.18.0</module>
        <module>flowable-upgrade-5.19.0</module>
        <module>flowable-upgrade-5.20.0</module>
        <module>flowable-upgrade-5.21.0</module>
        <module>flowable-upgrade-5.22.0</module>
        <module>flowable-upgrade-6.0.0</module>
        <module>flowable-upgrade-6.0.1</module>
        <module>flowable-upgrade-6.1.0</module>
        <module>flowable-upgrade-6.1.1</module>
        <module>flowable-upgrade-6.1.2</module>
        <module>flowable-upgrade-6.2.0</module>
        <module>flowable-upgrade-6.2.1</module>
        <module>flowable-upgrade-6.3.0</module>
        <module>flowable-upgrade-6.3.1</module>
        <module>flowable-upgrade-6.4.0</module>
        <module>flowable-upgrade-6.4.1</module>
        <module>flowable-upgrade-6.4.2</module>
        <module>flowable-upgrade-6.5.0</module>
        <module>flowable-upgrade-6.6.0</module>
        <module>flowable-upgrade-6.7.0</module>
        <module>flowable-upgrade-6.7.1</module>
        <module>flowable-upgrade-6.7.2</module>
        <module>flowable-upgrade-6.7.3</module>
    </modules>

    <dependencies>
        <!-- Testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <version>${assertj.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>1.3.170</version>
        </dependency>
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>8.0.19</version>
        </dependency>
        <dependency>
            <groupId>org.mariadb.jdbc</groupId>
            <artifactId>mariadb-java-client</artifactId>
            <version>2.7.4</version>
        </dependency>
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>42.3.5</version>
        </dependency>
   	<dependency>
            <groupId>com.oracle.database.jdbc</groupId>
            <artifactId>${oracle.jdbc.artifact}</artifactId>
            <version>${oracle.jdbc.version}</version>
        </dependency>
        <dependency>
            <groupId>com.microsoft.sqlserver</groupId>
            <artifactId>mssql-jdbc</artifactId>
            <version>7.4.1.jre8</version>
        </dependency>
	<dependency>
	    <groupId>net.sourceforge.jtds</groupId>
            <artifactId>jtds</artifactId>
            <version>1.3.0</version>
        </dependency>
       	<dependency>
            <groupId>com.ibm.db2</groupId>
            <artifactId>jcc</artifactId>
            <version>11.1.4.4</version>
        </dependency>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
            <version>${liquibase.version}</version>
            <exclusions>
				<exclusion>
					<groupId>javax.xml.bind</groupId>
					<artifactId>jaxb-api</artifactId>
				</exclusion>
			</exclusions>
        </dependency>
        <!-- Logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.25</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
            <version>1.7.25</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>1.7.25</version>
        </dependency>
        <dependency>
            <groupId>com.jayway.awaitility</groupId>
            <artifactId>awaitility</artifactId>
            <version>1.7.0</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <showDeprecation>true</showDeprecation>
                    <showWarnings>true</showWarnings>
                    <optimize>true</optimize>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <profiles>
        <profile>
            <id>generateData</id>
            <activation>
                <property>
                    <name>generateData</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <mainClass>org.activiti.upgrade.DataGenerator</mainClass>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>database</id>
            <activation>
                <property>
                    <name>database</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.4</version>
                        <executions>
                            <execution>
                                <id>database-test-create-schema</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <echo message="updating activiti cfg to db ${database}" />
                                        <copy file="src/main/resources/activiti.cfg.xml"
                                              todir="target/classes"
                                              overwrite="true"
                                              failonerror="false">
                                            <filterset filtersfile="${user.home}/.flowable/jdbc/build.flowable6.${database}.properties" />
                                        </copy>
                                    </tasks>
                                </configuration>
                            </execution>
                            <execution>
                                <id>database-test-set-jdbc-info</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <echo message="updating flowable cfg to db ${database}" />
                                        <copy file="src/main/resources/flowable.cfg.xml"
                                              todir="target/classes"
                                              overwrite="true"
                                              failonerror="false">
                                            <filterset filtersfile="${user.home}/.flowable/jdbc/build.flowable6.${database}.properties" />
                                        </copy>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>databasewithschema</id>
            <activation>
                <property>
                    <name>databasewithschema</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.4</version>
                        <executions>
                            <execution>
                                <id>database-test-create-schema</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <echo message="updating cfg to db ${databasewithschema}" />
                                        <copy file="src/main/resources/schema/activiti.cfg.xml"
                                              todir="target/classes"
                                              overwrite="true"
                                              failonerror="false">
                                            <filterset filtersfile="${user.home}/.flowable/jdbc/build.flowable6.${databasewithschema}.properties" />
                                        </copy>
                                        <copy file="src/main/resources/schema/flowable.cfg.xml"
                                              todir="target/classes"
                                              overwrite="true"
                                              failonerror="false">
                                            <filterset filtersfile="${user.home}/.flowable/jdbc/build.flowable6.${databasewithschema}.properties" />
                                        </copy>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
